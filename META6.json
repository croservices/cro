{
    "perl"          : "6.*",
    "name"          : "cro",
    "version"       : "0.8.3",
    "description"   : "Libraries and tools for building reactive services in Perl 6. This installs the cro command line and web tool, along with HTTP (including HTTPS and HTTP/2.0) and WebSocket support.",
    "tags"          : [ "HTTP", "WebSocket" ],
    "authors"       : [ "Jonathan Worthington <jnthn@jnthn.net>" ],
    "license"       : "Artistic-2.0",
    "depends"       : [ "IO::Socket::Async::SSL", "JSON::Fast",
                        "META6", "Shell::Command",
                        "File::Find", "Terminal::ANSIColor",
                        "OO::Monitors", "YAMLish", "Cro::WebSocket",
                        "Docker::File", "File::Ignore" ],
    "provides"      : {
                "Cro::Tools::CLI": "lib/Cro/Tools/CLI.pm6",
                "Cro::Tools::CroFile": "lib/Cro/Tools/CroFile.pm6",
                "Cro::Tools::Link::Editor": "lib/Cro/Tools/Link/Editor.pm6",
                "Cro::Tools::LinkTemplate": "lib/Cro/Tools/LinkTemplate.pm6",
                "Cro::Tools::LinkTemplate::HTTP": "lib/Cro/Tools/LinkTemplate/HTTP.pm6",
                "Cro::Tools::LinkTemplate::HTTPS": "lib/Cro/Tools/LinkTemplate/HTTPS.pm6",
                "Cro::Tools::LinkTemplate::WS": "lib/Cro/Tools/LinkTemplate/WS.pm6",
                "Cro::Tools::LinkTemplate::WSS": "lib/Cro/Tools/LinkTemplate/WSS.pm6",
                "Cro::Tools::Runner": "lib/Cro/Tools/Runner.pm6",
                "Cro::Tools::Serve": "lib/Cro/Tools/Serve.pm6",
                "Cro::Tools::Services": "lib/Cro/Tools/Services.pm6",
                "Cro::Tools::Template": "lib/Cro/Tools/Template.pm6",
                "Cro::Tools::TemplateLocator": "lib/Cro/Tools/TemplateLocator.pm6",
                "Cro::Tools::Template::Common": "lib/Cro/Tools/Template/Common.pm6",
                "Cro::Tools::Template::HTTPService": "lib/Cro/Tools/Template/HTTPService.pm6",
                "Cro::Tools::Template::ReactReduxSPA": "lib/Cro/Tools/Template/ReactReduxSPA.pm6",
                "Cro::Tools::Template::ZeroMQWorkSinkService": "lib/Cro/Tools/Template/ZeroMQWorkSinkService.pm6",
                "Cro::Tools::Template::ZeroMQWorkerService": "lib/Cro/Tools/Template/ZeroMQWorkerService.pm6",
                "Cro::Tools::Web": "lib/Cro/Tools/Web.pm6"
    },
    "resources": [
        "web/index.html",
        "web/css/bootstrap.min.css",
        "web/css/cro.css",
        "web/js/app.js",
        "web/fonts/glyphicons-halflings-regular.woff2",
        "fake-tls/ca-crt.pem",
        "fake-tls/server-crt.pem",
        "fake-tls/server-key.pem"
    ],
    "source-url"    : "https://github.com/croservices/cro.git"
}
