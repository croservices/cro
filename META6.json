{
  "name": "cro",
  "description": "Libraries and tools for building reactive services in Raku. This installs the cro command line and web tool, along with HTTP (including HTTPS and HTTP/2.0) and WebSocket support.",
  "version": "0.8.10",
  "api": "0",
  "perl": "6.*",
  "authors": [
    "Jonathan Worthington <jnthn@jnthn.net>"
  ],
  "auth": "zef:cro",
  "depends": [
    "IO::Socket::Async::SSL",
    "JSON::Fast",
    "META6",
    "Shell::Command",
    "File::Find",
    "Terminal::ANSIColor",
    "OO::Monitors",
    "YAMLish",
    "Cro::WebSocket:ver<0.8.10+>:api<0>:auth<zef:cro>",
    "Docker::File",
    "File::Ignore"
  ],
  "provides": {
    "Cro::Tools::CLI": "lib/Cro/Tools/CLI.rakumod",
    "Cro::Tools::CroFile": "lib/Cro/Tools/CroFile.rakumod",
    "Cro::Tools::Link::Editor": "lib/Cro/Tools/Link/Editor.rakumod",
    "Cro::Tools::LinkTemplate": "lib/Cro/Tools/LinkTemplate.rakumod",
    "Cro::Tools::LinkTemplate::HTTP": "lib/Cro/Tools/LinkTemplate/HTTP.rakumod",
    "Cro::Tools::LinkTemplate::HTTPS": "lib/Cro/Tools/LinkTemplate/HTTPS.rakumod",
    "Cro::Tools::LinkTemplate::WS": "lib/Cro/Tools/LinkTemplate/WS.rakumod",
    "Cro::Tools::LinkTemplate::WSS": "lib/Cro/Tools/LinkTemplate/WSS.rakumod",
    "Cro::Tools::Runner": "lib/Cro/Tools/Runner.rakumod",
    "Cro::Tools::Serve": "lib/Cro/Tools/Serve.rakumod",
    "Cro::Tools::Services": "lib/Cro/Tools/Services.rakumod",
    "Cro::Tools::Template": "lib/Cro/Tools/Template.rakumod",
    "Cro::Tools::Template::Common": "lib/Cro/Tools/Template/Common.rakumod",
    "Cro::Tools::Template::HTTPService": "lib/Cro/Tools/Template/HTTPService.rakumod",
    "Cro::Tools::Template::ReactReduxSPA": "lib/Cro/Tools/Template/ReactReduxSPA.rakumod",
    "Cro::Tools::Template::ZeroMQWorkSinkService": "lib/Cro/Tools/Template/ZeroMQWorkSinkService.rakumod",
    "Cro::Tools::Template::ZeroMQWorkerService": "lib/Cro/Tools/Template/ZeroMQWorkerService.rakumod",
    "Cro::Tools::TemplateLocator": "lib/Cro/Tools/TemplateLocator.rakumod",
    "Cro::Tools::Web": "lib/Cro/Tools/Web.rakumod"
  },
  "resources": [
    "web/index.html",
    "web/css/bootstrap.min.css",
    "web/css/cro.css",
    "web/js/app.js",
    "web/fonts/glyphicons-halflings-regular.woff2",
    "fake-tls/ca-crt.pem",
    "fake-tls/server-crt.pem",
    "fake-tls/server-key.pem"
  ],
  "license": "Artistic-2.0",
  "tags": [
    "HTTP",
    "WebSocket"
  ],
  "source-url": "https://github.com/croservices/cro.git"
}
